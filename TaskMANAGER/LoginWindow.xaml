<Window x:Class="TaskManager.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="200" Width="300">
    <Grid>
        <Label Content="Имя пользователя:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0"/>

        <Label Content="Пароль:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0"/>

        <Button Content="Войти" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0" Click="LoginButton_Click"/>
    </Grid>
</Window>